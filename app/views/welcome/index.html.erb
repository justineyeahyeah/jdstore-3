      <li data-target="#bootstrap-touch-slider" data-slide-to="0" class="active"></li>
      <li data-target="#bootstrap-touch-slider" data-slide-to="1"></li>
      <li data-target="#bootstrap-touch-slider" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper For Slides -->
    <div class="carousel-inner" role="listbox">

      <!-- Third Slide -->
      <div class="item active">

        <!-- Slide Background -->
        <img src="http://ww4.sinaimg.cn/large/006tNbRwgy1fgha4hotupj30xr0drae3.jpg" alt="Bootstrap Touch Slider" class="slide-image"/>
        <!-- <div class="bs-slider-overlay"></div> -->

        <div class="container">
          <div class="row">
            <!-- Slide Text Layer -->
            <div class="slide-text slide_style_center">

              <p style="font-family:Poynter,serif; color:black; font-size:3em;" data-animation="animated zoomInRight">Plan Your Summer Escape</p>
              <p style="font-family:Poynter, serif; color:black; font-size:1.5em;" data-animation="animated lightSpeedIn">No plane ticket? No problem. Let summer reading take you places.</p>
              <!-- <p data-animation="animated fadeInLeft">Bootstrap carousel now touch enable slide.</p> -->
              <%= link_to("Shop Now", products_path, :class => "btn btn-default") %>
              <!-- <a href="http://bootstrapthemes.co/" target="_blank"  class="btn btn-primary" data-animation="animated fadeInRight">select two</a> -->
            </div>
          </div>
        </div>
      </div>
      <!-- End of Slide -->

      <!-- Second Slide -->
      <div class="item">

        <!-- Slide Background -->
        <img src="http://ww4.sinaimg.cn/large/006tNbRwgy1ffz6uetng1j30xr0drtcg.jpg" alt="Bootstrap Touch Slider" class="slide-image"/>
        <!-- <div class="bs-slider-overlay"></div> -->
        <!-- Slide Text Layer -->
        <div class="slide-text slide_style_center">
          <p style="font-family:Poynter, serif; color:white; font-size:3.5em;" data-animation="animated flipInX">Gifts to Celebrate Every Dad</p>
          <!-- <a href="http://bootstrapthemes.co/" target="_blank" class="btn btn-default" data-animation="animated fadeInUp">select one</a> -->
          <!-- <a href="http://bootstrapthemes.co/" target="_blank"  class="btn btn-primary" data-animation="animated fadeInDown">Shop Now</a> -->
        </div>
      </div>
      <!-- End of Slide -->

      <!-- Third Slide -->
      <div class="item">

        <!-- Slide Background -->
        <img src="http://ww1.sinaimg.cn/large/006tKfTcgy1fg78fwqwbcj30xr0dr40m.jpg" alt="Bootstrap Touch Slider" class="slide-image"/>
        <!-- <div class="bs-slider-overlay"></div> -->
        <!-- Slide Text Layer -->
        <div class="slide-text-b slide_style_left">
          <p style="font-family:Poynter, serif; color:black; font-size:3.5em;" data-animation="animated zoomInLeft">Mystery in
            <br>
            the Mountains</p>
          <p style="font-family:Poynter, serif; color:black; font-size:1.5em;" data-animation="animated fadeInRight">Danger threatens a family ranch
