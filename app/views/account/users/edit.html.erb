<div class="col-md-6 col-md-offset-3" style="padding-bottom: 100px;">
<h2> 编辑用户资料 </h2>
<%= simple_form_for [:account, @user] do |f| %>

  <div class="group">
    <%= f.input :name, label: "姓名" %>
  </div>

  <div class="group">
    <%= f.input :address, label: '地址'%>
  </div>

  <div class="group">
    <%= f.input :cellphone, label: '电话' %>
  </div>

  <%= f.button :submit, '更新', class: 'button'  %>

<% end %>
</div>
