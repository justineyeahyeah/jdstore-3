<div class="col-md-4 col-md-offset-4 account-settings">
<h2> Account Settings </h2>
<%= simple_form_for [:account, @user] do |f| %>

  <div class="group">
    <%= f.input :name, label: "Name" %>
  </div>

  <div class="group">
    <%= f.input :address, label: 'Address'%>
  </div>

  <div class="group">
    <%= f.input :cellphone, label: 'Cellphone' %>
  </div>

  <div class="update-btn">
  <%= f.button :submit, 'Update', class: 'button'  %>
</div>
<% end %>
</div>
